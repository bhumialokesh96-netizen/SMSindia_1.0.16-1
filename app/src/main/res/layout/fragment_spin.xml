<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- HEADER: Dark Green -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B5E20"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lucky Spin"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spin the wheel to win real cash!"
            android:textColor="#C8E6C9"
            android:layout_marginTop="4dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- TOKEN COUNTER CARD (Overlapping) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="-25dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:strokeColor="#FFC107"
        app:strokeWidth="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Tokens: "
                android:textColor="#757575"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_spin_tokens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFC107"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- WHEEL AREA -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <!-- The Wheel View -->
        <!-- Ensure LuckyWheelView is in the package com.smsindia.app.ui -->
        <com.smsindia.app.ui.LuckyWheelView
            android:id="@+id/wheel_view"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_centerInParent="true"/>

        <!-- The Marker Arrow (Pointing Left at the 3 o'clock position) -->
        <!-- Because the code says index 0 starts at 0 deg (Right side) -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_marker_arrow"
            android:layout_alignEnd="@id/wheel_view"
            android:layout_centerVertical="true"
            android:layout_marginEnd="-15dp" 
            android:rotation="180"/> 
            <!-- Rotation 180 makes standard arrow point Left -->

    </RelativeLayout>

    <!-- BUTTON: 3D GOLD STYLE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <Button
            android:id="@+id/btn_spin_now"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="SPIN NOW"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:background="@drawable/bg_gold_3d"
            app:backgroundTint="@null"
            android:elevation="6dp"/>
    </LinearLayout>

</LinearLayout>
