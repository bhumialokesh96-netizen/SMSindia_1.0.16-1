<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER: Dark Green -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1B5E20"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="30dp"
            android:paddingBottom="50dp">

            <!-- Profile Image with Gold Border -->
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="45dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"
                    android:background="#EEE"/>
            </androidx.cardview.widget.CardView>
            
            <!-- Ring around image -->
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_coin_circle"
                android:layout_marginTop="-95dp"/>

            <TextView
                android:id="@+id/tv_profile_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <!-- BALANCE CARD (Overlapping) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="-30dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeColor="#FFC107"
            app:strokeWidth="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Balance"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tv_profile_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 0.00"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#1B5E20"
                    android:layout_marginVertical="8dp"/>

                <Button
                    android:id="@+id/btn_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="WITHDRAW MONEY"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5D4037"
                    android:background="@drawable/bg_gold_3d"
                    app:backgroundTint="@null"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BANK DETAILS SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Details"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Saved Bank Card (Gold Border) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layout_saved_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:strokeColor="#FFC107"
                app:strokeWidth="2dp"
                app:cardBackgroundColor="#FFF8E1"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_bank_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Name"
                        android:textStyle="bold"
                        android:textColor="#333"/>
                    <TextView
                        android:id="@+id/tv_bank_ac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AC: XXXXX"
                        android:textColor="#555"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/btn_add_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Add / Update Bank Details"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/bg_orange_border"
                android:textColor="#FF6F00"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <!-- HISTORY BUTTON -->
            <Button
                android:id="@+id/btn_withdraw_history"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="VIEW WITHDRAWAL HISTORY"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#1B5E20"
                app:strokeWidth="2dp"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
