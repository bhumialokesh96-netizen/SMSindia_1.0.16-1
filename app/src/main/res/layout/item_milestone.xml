<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeColor="#FFC107"
    app:strokeWidth="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Icon (Green Ring as requested before) -->
        <ImageView
            android:id="@+id/img_milestone_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_task"
            app:tint="#FFFFFF"
            android:background="@drawable/bg_green_ring"
            android:padding="12dp"/>

        <!-- Text Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tv_milestone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send First 20 SMS"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_milestone_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward: 1 Spin Coin"
                android:textColor="#1B5E20"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:textSize="13sp"/>

            <ProgressBar
                android:id="@+id/progress_milestone"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:progressDrawable="@drawable/bg_status_pill"
                android:progressTint="#FFC107"
                android:max="100"
                android:progress="50"/>
        </LinearLayout>

        <!-- Right Side: The Gold Buttons -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- 1. Status Box (0/20) - Uses new 3D Gold Style -->
            <TextView
                android:id="@+id/tv_progress_count"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:background="@drawable/bg_gold_3d"
                android:text="0 / 20"
                android:textColor="#5D4037"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="visible"/>
            
            <!-- 2. Claim Button - Uses new 3D Gold Style -->
            <!-- Text color is Brown (#5D4037) to match the image style -->
            <Button
                android:id="@+id/btn_claim_milestone"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:text="CLAIM"
                android:textColor="#5D4037"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@drawable/bg_gold_3d"
                app:backgroundTint="@null"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
