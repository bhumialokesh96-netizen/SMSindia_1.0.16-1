<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeColor="#FFC107"
    app:strokeWidth="4dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center">

        <!-- Success Icon (Green) -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/checkbox_on_background"
            app:tint="#4CAF50"/>

        <!-- Title (Dark Green) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withdrawal Successful!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="#1B5E20"/>

        <!-- Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your request has been submitted.\nThe amount will be credited to your bank account within 24 to 48 hours."
            android:textSize="14sp"
            android:textColor="#757575"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.2"/>

        <!-- Button (3D Gold Style) -->
        <Button
            android:id="@+id/btn_close_success"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="OKAY, GOT IT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_gold_3d"
            app:backgroundTint="@null"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
