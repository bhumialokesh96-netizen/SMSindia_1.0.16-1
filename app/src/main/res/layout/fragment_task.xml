<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS Task Automator"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a SIM card to start earning"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="20dp"/>

        <!-- SIM SELECTION (Cards) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="24dp">

            <!-- SIM 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_sim_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#BDBDBD"
                app:strokeWidth="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_sim_card"
                        app:tint="#1B5E20"/>
                    <TextView
                        android:id="@+id/tv_sim1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIM 1"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SIM 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_sim_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#BDBDBD"
                app:strokeWidth="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_sim_card"
                        app:tint="#1B5E20"/>
                    <TextView
                        android:id="@+id/tv_sim2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIM 2"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- TIMER DASHBOARD (Gold Border Added) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeColor="#FFC107"
            app:strokeWidth="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp">

                <!-- Circular Progress (Gold Indicator) -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_timer_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:trackColor="#F0F0F0"
                    app:indicatorColor="#FFC107"
                    app:trackThickness="10dp"
                    app:indicatorSize="150dp"
                    android:progress="0"
                    android:max="100"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textColor="#1B5E20"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SECONDS"
                        android:textSize="11sp"
                        android:letterSpacing="0.1"
                        android:textColor="#FFC107"
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- STATUS TEXT -->
        <TextView
            android:id="@+id/status_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to Start"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#555"/>

        <!-- CONTROLS -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Auto-Send Loop"
                    android:textStyle="bold"
                    android:textColor="#1B5E20"/>
                
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_auto_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BUTTON: 3D GOLD STYLE -->
        <Button
            android:id="@+id/btn_action_main"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="START TASK"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="#5D4037"
            android:background="@drawable/bg_gold_3d"
            app:backgroundTint="@null"/>

        <!-- TERMINAL LOGS (Gold Border) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Logs"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:textColor="#1B5E20"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_orange_border"
            android:padding="8dp"> 
            
            <TextView
                android:id="@+id/tv_logs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="> System initialized..."
                android:textColor="#333333"
                android:fontFamily="monospace"
                android:textSize="12sp"/>
        </ScrollView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
